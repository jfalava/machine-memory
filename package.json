{
  "name": "machine-memory",
  "version": "0.1.0",
  "bin": {
    "machine-memory": "src/app.ts"
  },
  "type": "module",
  "module": "src/app.ts",
  "scripts": {
    "build": "bun build --compile src/app.ts --outfile machine-memory",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:linux-arm64",
    "build:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 src/app.ts --outfile dist/machine-memory-darwin-arm64",
    "build:darwin-x64": "bun build --compile --target=bun-darwin-x64 src/app.ts --outfile dist/machine-memory-darwin-x64",
    "build:linux-arm64": "bun build --compile --target=bun-linux-arm64 src/app.ts --outfile dist/machine-memory-linux-arm64",
    "build:linux-x64": "bun build --compile --target=bun-linux-x64 src/app.ts --outfile dist/machine-memory-linux-x64",
    "check": "tsgo --noEmit && oxlint --fix --type-aware && bun test tests",
    "format": "oxfmt",
    "lint": "oxlint --type-aware",
    "test": "bun test tests",
    "test:binary": "bun test tests/binary.macos.test.ts",
    "test:binary:darwin-arm64": "bun run build:darwin-arm64 && bun test tests/binary.macos.test.ts",
    "test:unit": "bun test tests/cli.test.ts",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@types/bun": "1.3.9",
    "@typescript/native-preview": "7.0.0-dev.20260225.1",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "oxlint-tsgolint": "0.15.0",
    "typescript": "6.0.0-beta"
  }
}
